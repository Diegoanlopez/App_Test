<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_custom"
    tools:context=".AuthActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_fileName="background_5.json"
        app:lottie_loop="true"/>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-191dp"
        tools:layout_editor_absoluteY="73dp">

        <Space
            android:id="@+id/spacer"
            android:layout_width="8dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="42dp" />

        <ImageView
            android:id="@+id/Init_Logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="42dp"
            android:layout_toLeftOf="@+id/spacer"
            android:scaleType="centerCrop"
            android:src="@drawable/logo_gps"
            tools:ignore="MissingConstraints,ImageContrastCheck" />

        <TextView
            android:id="@+id/GPSText"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="42dp"
            android:layout_toRightOf="@+id/spacer"
            android:gravity="center_vertical"
            android:text="GPS"
            android:textColor="@color/white"
            android:textSize="35dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/MessageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Init_Logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="180dp"
            android:text="Find Your Device.\n Anywhere..."
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="35dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/SignUpButton"
            android:layout_width="338dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="560dp"
            android:background="@drawable/shape_round_button"
            android:text="SIGN UP FREE"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:theme="@style/GreenButtonTheme"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <Button
            android:id="@+id/GoogleButton"
            android:layout_width="338dp"
            android:layout_height="50dp"
            android:layout_below="@+id/SignUpButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape_round_button"
            android:drawableLeft="@drawable/logo_google"
            android:gravity="center"
            android:text="GOOGLE SIGN IN"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:theme="@style/WhiteButtonTheme"
            android:paddingRight="65dp"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <Button
            android:id="@+id/LogInButton"
            android:layout_width="338dp"
            android:layout_height="50dp"
            android:layout_below="@+id/GoogleButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape_round_button"
            android:text="LOG IN"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:theme="@style/BlueButtonTheme"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>